package ${package}.service.impl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.cache.annotation.Cacheable;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Date;
import java.util.HashMap;
import java.util.HashSet;
import java.util.List;
import java.util.Map;
import java.util.Set;

import com.dream.common.dao.HqlDao;
import com.dream.common.utils.ConstantUtils;
import com.dream.common.utils.StringUtils;
import com.dream.common.utils.ViewUtils;
import com.dream.common.utils.ShiroUtils;
import ${package}.domain.${className}DO;
import ${package}.service.${className}Service;



@Service
public class ${className}ServiceImpl implements ${className}Service {

	@Autowired
	private HqlDao hqlDao;
	
	public ${className}DO get(String id){
	
		${className}DO ${classname} = null;
		try {
			${classname} = (${className}DO) hqlDao.getObject(${className}DO.class, id);
		} catch (Exception e) {
			e.printStackTrace();
		}
		return ${classname};
	}
	
	@Transactional(readOnly = false,rollbackFor = Exception.class)
	public int saveOrUpdate(${className}DO ${classname}) {
		try {
			String userId = ShiroUtils.getUserId();
			Date curDate = new Date();
			${classname}.setModifyId(userId);
			${classname}.setModifyTime(curDate);
			if(StringUtils.isEmpty(${classname}.getId())) {
				${classname}.setId(ConstantUtils.getID());
				${classname}.setCreatorId(userId);
				${classname}.setCreatedTime(curDate);
			}
			
			hqlDao.saveOrUpdateObject(${classname});
		} catch (Exception e) {
			e.printStackTrace();
			return 1;
		}
		return 0;
	}
	
	@Transactional(readOnly = false,rollbackFor = Exception.class)
	public int remove(String ids) {
		try {
			hqlDao.executeByHql("delete from ${className}DO where id in("+StringUtils.formatIds(ids)+")");
		} catch (Exception e) {
			e.printStackTrace();
			return 1;
		}
		return 0;
	}
}
