<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 引入 Spring Boot 默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 定义日志存储路径 -->
    <property name="LOG_HOME" value="logs"/>
    <property name="APP_NAME" value="tweb-lite"/>

    <!-- 控制台日志输出格式 -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%m){cyan} %clr(:){faint} %clr(%L){green} %n%ex"/>

    <!-- 文件日志输出格式 -->
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}:%L - %msg%n"/>

    <!-- 日志文件编码 -->
    <property name="LOG_CHARSET" value="UTF-8"/>

    <!-- ========================================= -->
    <!-- 控制台输出配置 -->
    <!-- ========================================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>${LOG_CHARSET}</charset>
        </encoder>
    </appender>

    <!-- ========================================= -->
    <!-- 文件输出配置 -->
    <!-- ========================================= -->

    <!-- 所有日志文件 -->
    <appender name="FILE_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-all.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>${LOG_CHARSET}</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-all.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 错误日志文件 -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <file>${LOG_HOME}/${APP_NAME}-error.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>${LOG_CHARSET}</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- SQL 日志文件 -->
    <appender name="FILE_SQL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-sql.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>${LOG_CHARSET}</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-sql.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 业务日志文件 -->
    <appender name="FILE_BUSINESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-business.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>${LOG_CHARSET}</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-business.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 性能日志文件 -->
    <appender name="FILE_PERFORMANCE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-performance.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>${LOG_CHARSET}</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-performance.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ========================================= -->
    <!-- 开发环境配置 -->
    <!-- ========================================= -->
    <springProfile name="dev">
        <!-- 控制台日志级别 -->
        <logger name="com.tweb" level="DEBUG"/>
        <logger name="com.ssitao.code.frame.mybatisflex" level="DEBUG"/>

        <!-- SQL 日志 - 控制台和文件 -->
        <logger name="com.tweb.modular.flex.mapper" level="DEBUG"/>
        <logger name="com.ssitao.code.frame.mybatisflex.core.BaseMapper" level="DEBUG"/>

        <!-- 业务日志 - 控制台和文件 -->
        <logger name="BUSINESS_LOGGER" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_BUSINESS"/>
        </logger>

        <!-- 性能日志 - 控制台和文件 -->
        <logger name="PERFORMANCE_LOGGER" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_PERFORMANCE"/>
        </logger>

        <!-- 根日志级别 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_ALL"/>
            <appender-ref ref="FILE_ERROR"/>
        </root>
    </springProfile>

    <!-- ========================================= -->
    <!-- 测试环境配置 -->
    <!-- ========================================= -->
    <springProfile name="test">
        <!-- 控制台日志级别 -->
        <logger name="com.tweb" level="DEBUG"/>
        <logger name="com.ssitao.code.frame.mybatisflex" level="DEBUG"/>

        <!-- SQL 日志 - 控制台和文件 -->
        <logger name="com.tweb.modular.flex.mapper" level="DEBUG"/>
        <logger name="com.ssitao.code.frame.mybatisflex.core.BaseMapper" level="DEBUG"/>

        <!-- 业务日志 - 文件 -->
        <logger name="BUSINESS_LOGGER" level="INFO" additivity="false">
            <appender-ref ref="FILE_BUSINESS"/>
        </logger>

        <!-- 性能日志 - 文件 -->
        <logger name="PERFORMANCE_LOGGER" level="INFO" additivity="false">
            <appender-ref ref="FILE_PERFORMANCE"/>
        </logger>

        <!-- 根日志级别 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_ALL"/>
            <appender-ref ref="FILE_ERROR"/>
            <appender-ref ref="FILE_SQL"/>
        </root>
    </springProfile>

    <!-- ========================================= -->
    <!-- 生产环境配置 -->
    <!-- ========================================= -->
    <springProfile name="prod">
        <!-- 控制台不输出 -->
        <!-- 生产环境日志级别 -->
        <logger name="com.tweb" level="INFO"/>
        <logger name="com.ssitao.code.frame.mybatisflex" level="WARN"/>

        <!-- SQL 日志 - 仅文件，仅慢SQL -->
        <logger name="com.tweb.modular.flex.mapper" level="WARN"/>

        <!-- 第三方框架日志级别 -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.apache" level="WARN"/>
        <logger name="com.alibaba.druid" level="WARN"/>
        <logger name="io.lettuce" level="WARN"/>
        <logger name="io.swagger" level="WARN"/>

        <!-- 业务日志 - 文件 -->
        <logger name="BUSINESS_LOGGER" level="INFO" additivity="false">
            <appender-ref ref="FILE_BUSINESS"/>
        </logger>

        <!-- 性能日志 - 文件 -->
        <logger name="PERFORMANCE_LOGGER" level="INFO" additivity="false">
            <appender-ref ref="FILE_PERFORMANCE"/>
        </logger>

        <!-- 根日志级别 - 仅文件输出 -->
        <root level="INFO">
            <appender-ref ref="FILE_ALL"/>
            <appender-ref ref="FILE_ERROR"/>
        </root>
    </springProfile>

    <!-- ========================================= -->
    <!-- 默认配置 -->
    <!-- ========================================= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_ALL"/>
        <appender-ref ref="FILE_ERROR"/>
    </root>

</configuration>
